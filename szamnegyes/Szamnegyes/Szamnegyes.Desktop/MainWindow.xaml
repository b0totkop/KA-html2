<Window x:Class="Szamnegyes.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szamnegyes.Desktop"
        mc:Ignorable="d"
        Title="Számnégyes" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Button Content="A" FontSize="16" Click="ButtonClick" Grid.Row="0" Grid.Column="1" Margin="5"/>
        <Button Content="B" FontSize="16" Click="ButtonClick" Grid.Row="0" Grid.Column="2" Margin="5"/>
        <Button Content="C" FontSize="16" Click="ButtonClick" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <Button Content="D" FontSize="16" Click="ButtonClick" Grid.Row="2" Grid.Column="2" Margin="5"/>
        <Button Content="Reset" FontSize="16" Click="ButtonClick" Grid.Row="2" Grid.Column="3" Margin="5"/>

        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="Label00" Grid.Row="0" Grid.Column="0" FontSize="24" HorizontalAlignment="Center"/>
            <Label x:Name="Label01" Grid.Row="0" Grid.Column="1" FontSize="24" HorizontalAlignment="Center"/>
            <Label x:Name="Label02" Grid.Row="0" Grid.Column="2" FontSize="24" HorizontalAlignment="Center"/>

            <Label x:Name="Label10" Grid.Row="1" Grid.Column="0" FontSize="24" HorizontalAlignment="Center"/>
            <Label x:Name="Label11" Grid.Row="1" Grid.Column="1" FontSize="24" HorizontalAlignment="Center"/>
            <Label x:Name="Label12" Grid.Row="1" Grid.Column="2" FontSize="24" HorizontalAlignment="Center"/>

            <Label x:Name="Label20" Grid.Row="2" Grid.Column="0" FontSize="24" HorizontalAlignment="Center"/>
            <Label x:Name="Label21" Grid.Row="2" Grid.Column="1" FontSize="24" HorizontalAlignment="Center"/>
            <Label x:Name="Label22" Grid.Row="2" Grid.Column="2" FontSize="24" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
